<body>
      <div>
        <a class='btn' href="/requests">Requests</a>
        <a class='btn' href="/log_out">Log out</a>
        <a class='btn' href="/owner-history">Lettings</a>
        <a class='btn' href="/user-history">Requests</a>
</
        

   
    <h1>Book a space</h1>
    
   
    <a href="/spaces/new">List a Space</a>
    <%= @user.name %>
    <form action="/spaces/search" method="post">
      <label for='available-from'>Available from (DD/MM/YYYY)</label>
        <input type="text" name='available-from'>
      <label for='available-to'>Available to (DD/MM/YYYY)</label>
        <input type="text" name='available-to'>
      <input class="button" type="submit" value="List Spaces">
    </form>
    <br>
    <ul>
    <% @spaces.each do |space|%>
    <li>
      <h3><%= space.name %></h3>
      <p><%= space.description %></p> 
      <p>Location: <%= space.location %> Price per night: Â£<%= space.price %><p>
      <p>Available from: <%= space.available_from %> to: <%= space.available_to %></p>
      <form action="spaces/<%= space.id %>/booking" method="GET">
       <input hidden name="owner_id" value="<%=space.owner%>">
       <input type="submit" value="Book"/>
      </form>
    </li>
    <% end %>
    </ul>
</body>
</html>